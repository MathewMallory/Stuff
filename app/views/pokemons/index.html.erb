<p id="notice"><%= notice %></p>

<h1>Whats your Favorite Pokemon?</h1>

<table>
  <thead>
    <tr class="stats">
      <th>Title</th>
      <th>Health</th>
      <th>Attack</th>
      <th>Defense</th>
      <th>Special attack</th>
      <th>Special defense</th>
      <th>Speed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td>  <%= link_to(pokemon.title, pokemon.link) %></td>
        <td class="h"><%= pokemon.health %></td>
        <td class="a"><%= pokemon.attack %></td>
        <td class="d"><%= pokemon.defense %></td>
        <td class="sa"><%= pokemon.special_attack %></td>
        <td class="sd"><%= pokemon.special_defense %></td>
        <td class="s"><%= pokemon.speed %></td>
        <td><%= link_to 'Show', pokemon %></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
        <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

